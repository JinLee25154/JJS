<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:text="@string/appName"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:background="#8181F7"
        android:layout_width="match_parent"
        android:layout_height="5dp" />
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:id="@+id/linearLayout1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <Button
                    android:clickable="false"
                    android:id="@+id/nickname"
                    android:text="닉네임"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/category"
                    android:clickable="false"
                    android:text="카테고리"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/target"
                    android:clickable="false"
                    android:text="타겟"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/btnMore"
                    android:text="더보기"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/btnPrev"
                    android:src="@drawable/left_arrow"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ViewFlipper
                    android:id="@+id/viewFlipper1"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
                    <ImageView
                        android:src="@drawable/mov01"
                        android:layout_width="200dp"
                        android:layout_height="200dp" />
                    <ImageView
                        android:src="@drawable/mov05"
                        android:layout_width="200dp"
                        android:layout_height="200dp" />
                </ViewFlipper>
                <ImageButton
                    android:id="@+id/btnNext"
                    android:src="@drawable/right_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/rGroup1" >
                <RadioButton
                    android:id="@+id/em_good"
                    android:button="@drawable/emoticon_customize_good"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
                </RadioButton>
                <RadioButton
                    android:id="@+id/em_soso"
                    android:button="@drawable/emoticon_customize_soso"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/em_bad"
                    android:button="@drawable/emoticon_customize_bad"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RadioGroup>
            <TextView
                android:id="@+id/inputComment"
                android:text="댓글"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <EditText
                    android:id="@+id/editComment"
                    android:layout_width="320dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/btnComment"
                    android:text="확인"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/commentNickname"
                android:text="닉네임"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/viewComment"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btnDeleteComment"
                android:text="삭제"
                android:visibility="gone"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:background="#8181F7"
                android:layout_width="match_parent"
                android:layout_height="5dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>